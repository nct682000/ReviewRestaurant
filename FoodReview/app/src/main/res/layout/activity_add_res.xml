<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddResActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm quán ăn"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="#0984e3"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/edt_resName"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên quán ăn"
        android:textSize="25dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/edt_resAddress"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:hint="Địa chỉ"
            android:textSize="25dp"/>

        <Spinner
            android:background="@color/white"
            android:id="@+id/sp_resProvince"
            android:layout_width="120dp"
            android:layout_height="match_parent" />

    </LinearLayout>

    <EditText
        android:id="@+id/edt_description"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mô tả"
        android:textSize="25dp"/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ibtn_camera"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerInside"
            android:src="@drawable/camera"/>
        <ImageView
            android:id="@+id/iv_imgageDefault"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/image_default"/>
        <ImageButton
            android:id="@+id/ibtn_folder"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerInside"
            android:src="@drawable/folder"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn_addConfirm"
            android:layout_width="170dp"
            android:layout_height="80dp"
            android:text="Thêm"
            android:textSize="25dp"
            android:backgroundTint="#0984e3"/>
        <Button
            android:layout_marginLeft="50dp"
            android:id="@+id/btn_addCancel"
            android:layout_width="130dp"
            android:layout_height="80dp"
            android:text="Hủy"
            android:textSize="25dp"
            android:backgroundTint="#636e72"/>

    </LinearLayout>


</LinearLayout>