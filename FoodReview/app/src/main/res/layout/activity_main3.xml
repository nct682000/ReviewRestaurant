<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity3">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Tài khoản"
        android:textSize="35dp"
        android:textColor="@color/white"
        android:background="#0984e3"/>

    <LinearLayout
        android:id="@+id/ll_act31"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical">
        <TextView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:textSize="20dp"
            android:text="Bạn chưa đăng nhập vào hệ thống"
            android:textColor="@color/white"
            android:background="#d63031"/>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="180dp"
                    android:layout_height="80dp"
                    android:text="Đăng nhập"
                    android:textSize="20dp"
                    android:backgroundTint="#00b894"/>
                <Button
                    android:id="@+id/btn_register"
                    android:layout_marginLeft="20dp"
                    android:layout_width="180dp"
                    android:layout_height="80dp"
                    android:text="Đăng ký"
                    android:textSize="20dp"
                    android:backgroundTint="#0984e3"/>
            </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_act32"
        android:padding="8dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="525dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="275dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_avt"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:adjustViewBounds="true"
                android:src="@drawable/default_avatar"
                android:scaleType="centerCrop"/>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tên:"
                        android:textSize="15dp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nguyễn Cát Tường"
                        android:textSize="15dp"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giới tính:"
                        android:textSize="15dp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/tv_sex"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nam"
                        android:textSize="15dp"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ngày sinh:"
                        android:textSize="15dp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/tv_birthday"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="06/08/2000"
                        android:textSize="15dp"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Địa chỉ:"
                        android:textSize="15dp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tp.HCM"
                        android:textSize="15dp"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số điện thoại:"
                        android:textSize="15dp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="09488xxxxx"
                        android:textSize="15dp"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email:"
                        android:textSize="15dp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/tv_mail"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="abcdefgh12345@gmail.com"
                        android:textSize="15dp"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <Button
                    android:id="@+id/btn_update"
                    android:layout_marginRight="10dp"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="Chỉnh sửa"
                    android:textSize="10dp"
                    android:backgroundTint="#0984e3"
                    android:layout_gravity="right"/>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:text="Đăng xuất"
            android:textSize="15dp"
            android:backgroundTint="#d63031"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom|center">
        <Button
            android:id="@+id/btn_0"
            android:layout_margin="2dp"
            android:layout_width="95dp"
            android:layout_height="40dp"
            app:icon="@drawable/ic_baseline_home_24"
            android:backgroundTint="#fb9697"/>
        <Button
            android:id="@+id/btn_1"
            android:layout_margin="2dp"
            android:layout_width="95dp"
            android:layout_height="40dp"
            app:icon="@drawable/ic_baseline_save_24"
            android:backgroundTint="#af9ffc"/>
        <Button
            android:layout_margin="2dp"
            android:id="@+id/btn_2"
            android:layout_width="95dp"
            android:layout_height="40dp"
            app:icon="@drawable/ic_baseline_notifications_none_24"
            android:backgroundTint="#55fcd8"/>
        <Button
            android:layout_margin="2dp"
            android:id="@+id/btn_3"
            android:layout_width="95dp"
            android:layout_height="55dp"
            app:icon="@drawable/ic_baseline_account_circle_24"
            android:backgroundTint="#0984e3"/>

    </LinearLayout>
</LinearLayout>