<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Yêu thích"
        android:textSize="35dp"
        android:textColor="@color/white"
        android:background="#6c5ce7"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/btn_all"
            android:layout_width="133dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:text="Tất cả"
            android:textColor="#6c5ce7"
            android:textSize="12dp"/>
        <Button
            android:id="@+id/btn_hcm"
            android:layout_width="133dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:text="Hồ Chí Minh"
            android:textColor="#AAAAAA"
            android:textSize="12dp"/>
        <Button
            android:id="@+id/btn_hn"
            android:layout_width="133dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:text="Hà nội"
            android:textColor="#AAAAAA"
            android:textSize="12dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/tv_all"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:background="#6c5ce7"/>
        <TextView
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:id="@+id/tv_hcm"
            android:layout_width="130dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_hn"
            android:layout_width="130dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="520dp"
        android:orientation="vertical">

        <ListView
            android:id="@+id/lv_wishRes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:horizontalSpacing="15dp"
            android:padding="10dp"
            android:verticalSpacing="15dp"
            android:scrollbars="none"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom|center">
        <Button
            android:id="@+id/btn_0"
            android:layout_margin="2dp"
            android:layout_width="95dp"
            android:layout_height="40dp"
            app:icon="@drawable/ic_baseline_home_24"
            android:backgroundTint="#fb9697"/>
        <Button
            android:id="@+id/btn_1"
            android:layout_margin="2dp"
            android:layout_width="95dp"
            android:layout_height="55dp"
            app:icon="@drawable/ic_baseline_save_24"
            android:backgroundTint="#6c5ce7"/>
        <Button
            android:layout_margin="2dp"
            android:id="@+id/btn_2"
            android:layout_width="95dp"
            android:layout_height="40dp"
            app:icon="@drawable/ic_baseline_notifications_none_24"
            android:backgroundTint="#55fcd8"/>
        <Button
            android:layout_margin="2dp"
            android:id="@+id/btn_3"
            android:layout_width="95dp"
            android:layout_height="40dp"
            app:icon="@drawable/ic_baseline_account_circle_24"
            android:backgroundTint="#8ffbfa"/>

    </LinearLayout>
</LinearLayout>